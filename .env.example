# Environment Configuration
NODE_ENV=development

# Logging
LOG_LEVEL=info
LOG_PRETTY=true

# Scraping Configuration
SCRAPE_DELAY=2000
MAX_CONCURRENT_REQUESTS=5
USER_AGENT_ROTATION=true
RESPECT_ROBOTS_TXT=true

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=2
RATE_LIMIT_BURST=10

# Database
DATABASE_URL=sqlite:./data/jobs.db
DATABASE_WAL_MODE=true

# Web Server (if enabled)
WEB_PORT=3000
WEB_HOST=localhost

# Output Configuration
OUTPUT_DIRECTORY=./reports
REPORT_FORMATS=csv,json,pdf

# Queue Configuration (Redis required for BullMQ)
REDIS_URL=redis://localhost:6379
QUEUE_CONCURRENCY=3

# Security
API_KEY_HEADER=x-api-key
CORS_ORIGIN=*

# Performance
CACHE_TTL=3600
MEMORY_LIMIT=512mb

# Google Dorks Configuration
GOOGLE_DELAY=5000
GOOGLE_MAX_PAGES=5
GOOGLE_COUNTRY=us
GOOGLE_LANGUAGE=en
